<div class="row row-cols-1 row-cols-md-3 g-4">
    {{#each beers}}
  <div class="col">
    <div class="card h-100">
      <img id="beer-img" src="{{this.image_url}}" class="card-img-top" alt="beer image">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="fw-lighter">{{this.tagline}}</p>
        <p class="card-text">{{this.description}}</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>



