<div class="card mb-3" style="max-width: 110wh;">
        {{#with beer}}
  <div class="row g-0">
    <div class="col-md-2 d-flex justify-content-center align-items-center">
       {{>imagePartial}}     
    </div>
    <div class="col-md-10">
      <div class="card-body">
        {{>beerPartial}}
       <p><strong>Food Pairing</strong></p>      
        {{#each food_pairing as |option|}}
            <li>{{option}}</li>
        {{/each}}       
        <br>
        <p class="card-text"><b>Brewers Tips:</b>{{brewers_tips}}</p>
      </div>
    </div>
  </div>
        {{/with}}
</div>


